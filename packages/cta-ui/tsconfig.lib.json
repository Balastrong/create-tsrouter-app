{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "outDir": "./lib-dist",
    "rootDir": "./lib",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "nodenext",
    "declaration": true,
    "declarationDir": "./lib-dist"
  },
  "include": ["./lib/*.ts"],
  "exclude": ["node_modules", "dist", "lib-dist"]
}
