{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "./dist/types"
  },
  "include": [
    "./src/**/*.ts",
    "../cta-core/src/add-ons.ts",
    "../cta-core/src/config-file.ts",
    "../cta-core/src/constants.ts",
    "../cta-core/src/environment.ts",
    "../cta-core/src/file-helper.ts",
    "../cta-core/src/package-manager.ts",
    "../cta-core/src/toolchain.ts",
    "../cta-core/src/types.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
